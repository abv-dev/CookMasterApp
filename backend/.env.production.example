# ===================================
# CookMaster Backend - PRODUCTION
# ===================================

NODE_ENV=production

# Server Configuration
PORT=3000

# Database Configuration (MongoDB Atlas or production instance)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cookmaster?retryWrites=true&w=majority

# JWT Configuration
# CRITICAL: Generate a strong secret! Use:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=YOUR_STRONG_PRODUCTION_SECRET_HERE
JWT_EXPIRES_IN=24h

# CORS Configuration - Replace with your production domains
ALLOWED_ORIGINS=https://cookmaster.com,https://www.cookmaster.com,https://app.cookmaster.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/www/cookmaster/uploads

# Rate Limiting (stricter in production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=error
LOG_FILE=/var/log/cookmaster/app.log

# External Services (Optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# REDIS_URL=redis://localhost:6379
